{
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES5", // Ensure compatibility with older browsers
    "lib": ["DOM", "ES2015"], // Include ES2015 for Promise definitions
    "module": "ESNext", // Support dynamic imports
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}